<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</head>
<body>
@*@Html.MvcSiteMap().Menu()
        @Html.SiteMap().SiteMapPath()*@

<nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Dropdown
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color: ">
                        <div class="d-grid gap-2 col-6 mx-5">

                            @if (User.Identity.IsAuthenticated)
                            {
                                <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "Classes")'" style="width=">Classes</button>

                                <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "Exams")'">Exams</button>

                                <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "Expenses")'">Expenses</button>

                                <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "Fees")'">Fees</button>

                                <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "StudentAttendances")'">StudentAttendances</button>

                                <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "Student")'">Students</button>

                                <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "Subjects")'">Subjects</button>

                                <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "TeacherAttendances")'">TeacherAttendances</button>

                                <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "TeacherSubjects")'">TeacherSubjects</button>
                                if (User.IsInRole("SuperUser"))
                                {
                                    <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "Teachers")'">Teachers</button>
                                }
                            }
                        </div>
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                </li>
                <li class="nav-item">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Index", "Role")'">View Role</button>
                            <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("Create", "Role")'">Create Role</button>
                            <button type="button" class="btn btn-outline-primary" onclick="location.href = '@Url.Action("RegisterRole", "Account")'">Assign Role</button>
                        }
                    }
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>
&nbsp;
&nbsp;
&nbsp;
&nbsp;
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
</body>
</html>
